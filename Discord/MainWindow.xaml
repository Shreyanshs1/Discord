<Window x:Class="Discord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Discord"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#fff">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="154"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Column 0 Defintions here -->
        <Grid Grid.Column="0" Background="#EFC3CA">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="140px"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="UserListBox" Grid.Row="0" Background="#E7DDFF" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,40,0,0"/>
            <Image x:Name="UserImage" Grid.Row="1" Width="80" Height="80" VerticalAlignment="Top" Margin="0,10,0,0" Source="/20241021_122254.jpg"/>
            <TextBox x:Name="UserName" Grid.Row="1" Background="#fff" VerticalAlignment="Bottom" Height="28" Margin="10,0,10,40"/>
            <Button x:Name="ConnectButton" Grid.Row="1" Content="Connect" Background="#E2EAF4" Height="30" Margin="10,0,10,0" VerticalAlignment="Bottom" Click="ConnectToServer"/>
            <Label Content="Chatt App" Grid.Row="0" Height="30" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="16"/>
        </Grid>

        <!-- Column 1 Defintions here -->
        <Grid Grid.Column="1" Background="#FFECA1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20px"/>
            </Grid.RowDefinitions>

            <ListBox x:Name="MessagesListBox" Grid.Row="0" Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Background="#00000000" d:ItemsSource="{d:SampleData ItemCount=5}"/>
            <TextBox x:Name="MessageTextBox" Grid.Row="1" Margin="0,0,85,0" BorderBrush="Gray" BorderThickness="1" Padding="5" Height="28" Background="Black" Foreground="White" TextAlignment="Justify"/>
            <Button x:Name="SendButton" Content="Send" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Width="80"  Padding="5" Height="28" Margin="546,0,0,0" Background="Black" Foreground="White" Click="SendButton_Click"/>
        </Grid>

    </Grid>
</Window>
