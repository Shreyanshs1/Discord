<Window x:Class="Discord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Discord"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#070707">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="154"/>
            <!-- Column for User List -->
            <ColumnDefinition/>
            <!-- Column for Chat Area (takes remaining space) -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Row for Messages (takes remaining space) -->
            <RowDefinition Height="Auto"/>
            <!-- Row for Input (adjusts to content size) -->
            <RowDefinition Height="20px"/>
        </Grid.RowDefinitions>
        <!-- User List -->
        <ListBox x:Name="UserListBox" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="0,0,10,0" BorderBrush="Gray" BorderThickness="1" Background="Black" Foreground="White" SelectionChanged="UserListBox_SelectionChanged">
            <Image Height="100" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        </ListBox>
        <!-- Chat Messages -->
        <ListBox x:Name="MessagesListBox" Grid.Column="1" Grid.Row="0" Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1" Background="Black" Foreground="White"/>
        <!-- Message Input -->
        <TextBox x:Name="MessageTextBox" Grid.Column="1" Grid.Row="1" Margin="0,0,85,0" VerticalAlignment="Center" BorderBrush="Gray" BorderThickness="1" Padding="5" Height="28" Background="Black" Foreground="White"/>
        <!-- Send Button -->
        <Button x:Name="SendButton" Content="Send" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Width="80" VerticalAlignment="Center" Padding="5" Height="28" Margin="546,0,0,0" Background="Black" Foreground="White" Click="SendButton_Click"/>
        <Grid Grid.ColumnSpan="2" Margin="77,28,549,0" Grid.RowSpan="2"/>
    </Grid>
</Window>
