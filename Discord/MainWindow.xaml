<Window x:Class="Discord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Discord"
        mc:Ignorable="d"
        Title="WalkieTalkie" Height="450" Width="600" ResizeMode="NoResize" Background="#fff">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Column 0 Defintions here -->
        <Grid Grid.Column="0" Background="#EFC3CA">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="140px"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="10">
                <Label Content="Chatt App" Grid.Row="0" Height="30" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="16"/>
                <ListBox x:Name="UserListBox" Grid.Row="0" Background="#00000000" BorderThickness="0,0,0,0" FontFamily="Segoe UI Symbol" FontSize="14"/>
            </StackPanel>
            <Image x:Name="UserImage" Grid.Row="1" Width="80" Height="80" VerticalAlignment="Top" Margin="0,10,0,0" Source="/20241021_122254.jpg"/>
            <TextBox x:Name="UserName" Grid.Row="1" Background="Black" Foreground="White" VerticalAlignment="Bottom" Height="28" Margin="10,0,10,40"/>
            <Button x:Name="ConnectButton" Grid.Row="1" Content="Connect" Background="Black" Foreground="White" Height="30" Margin="10,0,10,0" VerticalAlignment="Bottom" Click="ConnectToServer"/>
        </Grid>

        <!-- Column 1 Defintions here -->
        <Grid Grid.Column="1" Background="#FFECA1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40px"/>
            </Grid.RowDefinitions>
            <ContentControl x:Name="MainContentArea" Grid.Row="0"/>

            
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Show Chat" Width="120" Margin="5" Padding="10,5" Background="Black" Foreground="White"/>
                <Button Content="Show Canvas" Width="120" Margin="5" Padding="10,5" Background="Black" Foreground="White"/>
                <Button Content="Show Settings" Width="120" Margin="5" Padding="10,5" Background="Black" Foreground="White"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
